<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login y Register</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/toastr.min.css">

    <script src="/js/jquery-3.5.1.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/toastr.min.js"></script>
    <script src="/js/bootbox.min.js"></script>
    <script src="/js/moment-with-locales.min.js"></script>


    <script>


        $(document).ready(function () {

            moment.locale("es");

            toastr.options = {
                "closeButton": true,
                "progressBar": true,
            }

            bootbox.addLocale("pancho", {
                OK: 'Aceptar',
                CANCEL: 'Cancelar',
                CONFIRM: 'Confirmar'
            });

            <% for (let error of errors) { %>
                toastr.error("<%= error %>", "Error");
            <% } %>

            <% for (let mensaje of mensajes) { %>
                toastr.success("<%= mensaje %>", "Mensaje del Sistema");
            <% } %>

            
        });

    </script>

</head>

<body style="background-image: url('/img/martillero.jpg'); background-size: cover; background-position: 10% 5%;">
    <div class="container" >
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <h3 class="text-center">Login</h3>
                <div>
                    <form class="mt-5" action="/login" method="POST">
                        <div class="form-group row">
                            <label for="name" class="col-sm-3 col-form-label">Name</label>
                            <div class="col-sm-9">
                                <input required type="text" class="form-control" id="name" name="name" value="">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-9 offset-sm-3">
                                <button type="submit" class="btn btn-success">Access</button>
                            </div>
                        </div>
                    </form>
                </div>

                
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">registration</button>
  
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">User Registration</h5>
                        </div>
                        <div class="modal-body">
                            <form class="form" action="/register" method="POST" enctype ="multipart/form-data" >
                                <div class="row">
                                    <input required placeholder="name" type="text" minlength="2" id="name" name="name" value="">
                                </div>
                                <div class="row">
                                    <input placeholder="email" required type="email" id="email" name="email" value="">
                                </div>
                                <div class="row">
                                    <input placeholder="password" required type="password" id="password" name="password" value="" >
                                </div>
                                <div class="row">
                                    <input placeholder="confirm password"  required type="password" id="password_confirm" name="password_confirm" value="" >
                                </div>
                                <br>
                                        <button type="submit" class="btn btn-primary">Enter Registration</button>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>